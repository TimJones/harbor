set -e

NODE_IP=$(ip -f inet -o addr show eth0|cut -d\  -f 7 | cut -d/ -f 1)
echo "${NODE_IP} $(hostname -s).novalocal $(hostname -s)" >> /etc/hosts
hostnamectl set-hostname $(hostname -s).novalocal
