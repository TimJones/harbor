HARBOR_AUTH_SECTION=$1
echo "${OS_DISTRO}: Reloading service auth edit for: $HARBOR_AUTH_SECTION"
################################################################################

kubectl delete -f /opt/harbor/kubernetes/templates/ipsilon/services.yaml
kubectl create -f /opt/harbor/kubernetes/templates/ipsilon/services.yaml
